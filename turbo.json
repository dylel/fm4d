{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env"],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "TRIGGER_SECRET_KEY",
    "TRIGGER_PROJECT_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".svelte-kit/**", ".vercel/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
